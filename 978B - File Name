import java.util.Scanner;
import java.util.*;

public class Main
{
	public static void main(String[] args) {
	Scanner sc=new Scanner(System.in);
	int t=sc.nextInt();
    String s=sc.next();
    int f=0;
    for(int i=0;i<s.length()-2;i++){
        if(s.charAt(i)=='x'&&s.charAt(i+1)=='x'&&s.charAt(i+2)=='x') f++;
    }
    System.out.println(f);
    
	}
}
